<Window x:Class="lab12_patterns_.ToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab12_patterns_"
        mc:Ignorable="d"
        Title="ToolsWindow" Height="236.932" Width="202.841">
    <Grid>
        <ComboBox  Name="TypeFigure" HorizontalAlignment="Left"  SelectionChanged="changeFigureType" VerticalAlignment="Top" Width="75" Visibility="Visible" Margin="51,10,0,0">
            <ComboBoxItem Content="Circle"/>
            <ComboBoxItem Content="Square"/>
        </ComboBox>
        <ComboBox  Name="CountFigure" HorizontalAlignment="Left"  SelectionChanged="changeCountFigure" VerticalAlignment="Top" Width="75" Visibility="Visible" Margin="51,76,0,0">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
        </ComboBox>
        <Button Name="CreateFugure" Content="Create" Click="CreateFigure" Margin="37,147,48,10"></Button>
    </Grid>
</Window>
