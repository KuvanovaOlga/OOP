<Window x:Class="lab12_patterns_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab12_patterns_"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="scope">
        <Button Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Create_Figure"/>
        <Button Content="Main Figure" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="MainFigure" Margin="0,25,0,0"/>
        <Button Content="Complex Figure" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="ComplexFigure" Margin="0,50,0,0"/>
    </Grid>
</Window>
